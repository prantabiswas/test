<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3030"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context="com.example.msi.test.Main2Activity">


    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="502dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:paddingLeft="70dp"
        android:text="Welcome!"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_write2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="left"
        android:lines="3"
        android:paddingLeft="20dp"
        android:text="   Make your prescription Digital and save it for lifetime uses :)"
        android:textColor="#b3b3b3"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"

        android:background="#838b8b"
        android:clickable="true"
        android:drawableLeft="@drawable/up"
        android:drawablePadding="20dp"
        android:onClick="OnClick"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="Upload Prescription"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_records"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#838b8b"
        android:drawableLeft="@drawable/records"
        android:drawablePadding="30dp"
        android:padding="10dp"
        android:paddingRight="30dp"
        android:text="Medical Records"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_alarm"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#838b8b"
        android:drawableLeft="@drawable/clock"
        android:drawablePadding="50dp"
        android:padding="7dp"
        android:text="Alarm"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_search"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#838b8b"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="50dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Search"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="30dp"
        android:onClick="onClicktext"
        android:text="@string/signout"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>
